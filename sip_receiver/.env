# ===== SIP Receiver (FastAPI) =====
SERVICE_PORT=5065

# ===== SIP Signaling (UDP) =====
SIP_BIND_IP=0.0.0.0
SIP_PORT=5060

# ===== RTP Ingest =====
RTP_BIND_IP=0.0.0.0
RTP_PORT_MIN=11000
RTP_PORT_MAX=12000

# ===== Network Advertisement =====
# Set this to the IP address that StarTrinity can reach (host/VM IP).
# If left unset, SDP will use RTP_BIND_IP.
# Example: ADVERTISE_IP=192.168.XX.XXX
ADVERTISE_IP=192.168.5.4

# SIP Receiver already has SIP/RTP + ADVERTISE_IP (good)
# Tell SIP Receiver where the socket REST API lives (for /init/{agent_id})
SOCKET_BASE_URL=http://localhost:8002   # change host/port if socket API runs elsewhere

